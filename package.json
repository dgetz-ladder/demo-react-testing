{
  "name": "react-app-playwright",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest --config=jest.config.js",
    "test:watch": "jest --config=jest.config.js --watch",
    "test:all": "npm run test && npm run e2e:functional && npm run e2e:visual",
    "e2e": "cd e2e && jest --testMatch='**/specs/{app_visual,app_functional}.js'",
    "e2e:functional": "cd e2e && jest specs/app_functional.js",
    "e2e:visual": "export $(grep -v '^#' .env.local | xargs) && cd e2e && npx percy exec -- jest specs/app_visual.js",
    "e2e:browserstack:tunnel": "export $(grep -v '^#' .env.local | xargs) && cd e2e && node browserstack-tunnel.mjs --test",
    "browserstack:connectivity": "export $(grep -v '^#' .env.local | xargs) && cd e2e && node browserstack-tunnel.mjs",
    "deploy:preview": "npm run build && npx serve build -l 3000"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@percy/cli": "^1.31.2",
    "@percy/playwright": "^1.0.9",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^14.3.0",
    "@vitejs/plugin-react": "^5.0.4",
    "babel-jest": "^30.2.0",
    "browserstack-local": "^1.5.5",
    "jest-environment-jsdom": "^30.2.0",
    "jest": "^30.2.0",
    "playwright": "^1.23.4",
    "vite": "^7.1.7"
  }
}
